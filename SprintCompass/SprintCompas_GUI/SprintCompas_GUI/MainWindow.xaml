<Window x:Class="SprintCompas_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SprintCompas_GUI"
        mc:Ignorable="d"
        Title="Three Coders Walk Into A Bar - 3112 Project 1" Height="500" Width="600">
    <Grid>
        <TabControl>
            <TabItem Header="New">
                <Grid>
                    <!--Header-->
                    <GroupBox BorderThickness="2" BorderBrush="Black" Margin="10,10,10,0" Height="39" VerticalAlignment="Top" >
                        <WrapPanel Grid.Row="1" Grid.ColumnSpan="2" >
                            <Label Content="Sprint Compass" FontSize="20" FontFamily="Century Gothic" FontWeight="SemiBold" FontStyle="Italic"/>
                            <Label Content=" - Create Project!" FontSize="20" FontFamily="Century Gothic"/>
                        </WrapPanel>
                    </GroupBox>
                    <!--New Project-->
                    <GroupBox Header="New Project" BorderThickness="2" BorderBrush="Black" Margin="10,50,340,40">
                        <StackPanel>
                            <TextBox x:Name="Project" Text="Project Name" Margin="5"/>
                            <TextBox x:Name="TeamName" Text="Team Name" Margin="5"  />
                            <TextBox x:Name="ProductName" Text="Product Name" Margin="5"  />
                            <TextBox x:Name="StartDate" Text="Start Date" Margin="5" />
                            <TextBox x:Name="HoursPerSP" Text="Hours Per Story Point" Margin="5" />
                            <TextBox x:Name="EstSP" Text="Estimated Story Points" Margin="5"  />
                            <TextBox x:Name="EstCost" Text="Estimated Cost" Margin="5" />
                            <TextBox x:Name="TeamMember" Text="Team Member (Comma separated)" Margin="5"  />
                            <Button Name="NPSubmit" Content="Submit" Margin="10" Click="NPSubmit_Click"  />
                        </StackPanel>
                    </GroupBox>
                    <!--Display-->
                    <GroupBox Header="Display" BorderThickness="2" BorderBrush="Black" Margin="260,50,10,40">
                        <WrapPanel Grid.Row="1" Grid.ColumnSpan="2">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock x:Name="display" Text="Result info goes here..." TextWrapping="Wrap" Width="398" Height="700" Margin="3" />
                            </ScrollViewer>
                        </WrapPanel>
                    </GroupBox>

                </Grid>
            </TabItem>
            <TabItem Header="Projects">
                <Grid>
                    <!--Header-->
                    <GroupBox BorderThickness="2" BorderBrush="Black" Margin="10,10,10,0" Height="39" VerticalAlignment="Top" Grid.ColumnSpan="3" >
                        <WrapPanel Grid.Row="1" Grid.ColumnSpan="2" >
                            <Label Content="Sprint Compass" FontSize="20" FontFamily="Century Gothic" FontWeight="SemiBold" FontStyle="Italic"/>
                            <Label Content="- Projects" FontSize="20" FontFamily="Century Gothic"/>
                            <TextBox x:Name="ProjectName" Text="Project Name" Width="120" Margin="15,9,5,5"   />
                            <Button x:Name="FindSprint" Content="Find" Width="120" Margin="10,9,10,5" Click="FindSprint_Click"   />
                        </WrapPanel>
                    </GroupBox>
                    <!--Sprint info-->
                    <GroupBox Header="Sprint info" BorderThickness="2" BorderBrush="Black"  Margin="10,50,340,200" Grid.ColumnSpan="3">
                        <StackPanel>
                            <TextBox x:Name="UserStory" Text="User Story" Margin="5"  />
                            <TextBox x:Name="Priority" Text="Priority" Margin="5"  />
                            <TextBox x:Name="IrE" Text="Initial Relative Estimate" Margin="5" />
                            <TextBox x:Name="IrC" Text="Initial Relative Cost" Margin="5" />
                            <Button Name="AddSprintInfo" Content="Add" Margin="10" Click="AddSprintInfo_Click" />
                        </StackPanel>
                    </GroupBox>
                    <!--Log-->
                    <GroupBox Header="Log" BorderThickness="2" BorderBrush="Black" Margin="10,250,340,40" Grid.Column="2">
                        <StackPanel>
                            <ComboBox Name="TeamMemberList" Margin="5"/>
                            <TextBox x:Name="HoursWorked" Text="Hours Worked" Margin="5"  />
                            <TextBox x:Name="Reestimate" Text="Re Estimate" Margin="5" />
                            <Button Name="LogSprintHours" Content="Submit" Margin="10" Click="LogSprintHours_Click" />
                        </StackPanel>
                    </GroupBox>
                    <!--Display-->
                    <GroupBox Header="Display" BorderThickness="2" BorderBrush="Black" Margin="260,50,10,40" Grid.ColumnSpan="3">
                        <WrapPanel Grid.Row="1" Grid.ColumnSpan="2">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock x:Name="display2" Text="Result info goes here..." TextWrapping="Wrap" Width="398" Height="700" Margin="3" />
                            </ScrollViewer>
                        </WrapPanel>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Backlog">
                <Grid>
                    <!--Header-->
                    <GroupBox BorderThickness="2" BorderBrush="Black" Margin="10,10,10,0" Height="39" VerticalAlignment="Top" >
                        <WrapPanel Grid.Row="1" Grid.ColumnSpan="2" >
                            <Label Content="Sprint Compass" FontSize="20" FontFamily="Century Gothic" FontWeight="SemiBold" FontStyle="Italic"/>
                            <Label Content=" - Backlog" FontSize="20" FontFamily="Century Gothic"/>
                            <TextBox x:Name="ProjectName2" Text="Project Name" Width="120" Margin="15,9,5,5"   />
                            <Button x:Name="FindSprint2" Content="Find" Width="120" Margin="10,9,10,5" Click="FindSprint2_Click"   />
                        </WrapPanel>
                    </GroupBox>
                    <!--Backlog-->
                    <GroupBox Header="Backlog" BorderThickness="2" BorderBrush="Black"  Margin="10,50,340,200" Grid.ColumnSpan="3">
                        <StackPanel>
                            <Label Content="Sprint"></Label>
                            <ComboBox Name="Sprint" Margin="5"/>
                            <Label Content="User Story"></Label>
                            <ComboBox Name="UserStoryList" Margin="5" SelectionChanged="UserStoryList_SelectionChanged"/>
                            <Button Name="AddUserStoryToSprint" Content="Add To Sprint" Margin="10" Click="AddSprintInfo_Click" />
                        </StackPanel>
                    </GroupBox>
                    <!--Display-->
                    <GroupBox Header="Display" BorderThickness="2" BorderBrush="Black" Margin="260,50,10,40" Grid.ColumnSpan="3">
                        <WrapPanel Grid.Row="1" Grid.ColumnSpan="2">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock x:Name="display3" Text="Result info goes here..." TextWrapping="Wrap" Width="398" Height="700" Margin="3" />
                            </ScrollViewer>
                        </WrapPanel>
                    </GroupBox>
                </Grid>
                
            </TabItem>
            <TabItem Header="Report">
                <Grid>
                    <!--Header-->
                    <GroupBox BorderThickness="2" BorderBrush="Black" Margin="10,10,10,0" Height="39" VerticalAlignment="Top" >
                        <WrapPanel Grid.Row="1" Grid.ColumnSpan="2" >
                            <Label Content="Sprint Compass" FontSize="20" FontFamily="Century Gothic" FontWeight="SemiBold" FontStyle="Italic"/>
                            <Label Content=" - Reports" FontSize="20" FontFamily="Century Gothic"/>
                        </WrapPanel>
                    </GroupBox>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
