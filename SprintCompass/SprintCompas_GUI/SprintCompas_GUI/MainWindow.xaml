<Window x:Class="SprintCompas_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SprintCompas_GUI"
        mc:Ignorable="d"
        Title="Three Coders Walk Into A Bar - 3112 Project 1" Height="600" Width="600">
    <Grid>
        <TabControl>
            <TabItem Header="New">
                <Grid>
                    <!--Header-->
                    <GroupBox BorderThickness="2" BorderBrush="Black" Margin="10,10,10,0" Height="39" VerticalAlignment="Top" >
                        <WrapPanel Grid.Row="1" Grid.ColumnSpan="2" >
                            <Label Content="Sprint Compass" FontSize="20" FontFamily="Century Gothic" FontWeight="SemiBold" FontStyle="Italic"/>
                            <Label Content=" - Create Project!" FontSize="20" FontFamily="Century Gothic"/>
                        </WrapPanel>
                    </GroupBox>
                    <!--New Project-->
                    <GroupBox Header="New Project" BorderThickness="2" BorderBrush="Black" Margin="10,50,340,40">
                        <StackPanel>
                            <TextBox x:Name="Project" Text="Project Name" Margin="5"/>
                            <TextBox x:Name="TeamName" Text="Team Name" Margin="5"  />
                            <TextBox x:Name="ProductName" Text="Product Name" Margin="5"  />
                            <TextBox x:Name="StartDate" Text="Start Date" Margin="5" />
                            <TextBox x:Name="HoursPerSP" Text="Hours Per Story Point" Margin="5" />
                            <TextBox x:Name="EstSP" Text="Estimated Story Points" Margin="5"  />
                            <TextBox x:Name="EstCost" Text="Estimated Cost" Margin="5" />
                            <TextBox x:Name="TeamMember" Text="Team Member (Comma separated)" Margin="5"  />
                            <Button Name="NPSubmit" Content="Submit" Margin="10" Click="NPSubmit_Click"  />
                        </StackPanel>
                    </GroupBox>
                    <!--Display-->
                    <GroupBox Header="Display" BorderThickness="2" BorderBrush="Black" Margin="260,50,10,40">
                        <WrapPanel Grid.Row="1" Grid.ColumnSpan="2">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock x:Name="display" Text="Result info goes here..." TextWrapping="Wrap" Width="398" Height="700" Margin="3" />
                            </ScrollViewer>
                        </WrapPanel>
                    </GroupBox>

                </Grid>
            </TabItem>
            <TabItem Header="Projects">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="59*"/>
                        <ColumnDefinition Width="238*"/>
                    </Grid.ColumnDefinitions>
                    <!--Header-->
                    <GroupBox BorderThickness="2" BorderBrush="Black" Margin="10,10,10,0" Height="39" VerticalAlignment="Top" Grid.ColumnSpan="2" >
                        <WrapPanel Grid.Row="1" Grid.ColumnSpan="2" >
                            <Label Content="Sprint Compass" FontSize="20" FontFamily="Century Gothic" FontWeight="SemiBold" FontStyle="Italic"/>
                            <Label Content="- Projects" FontSize="20" FontFamily="Century Gothic"/>
                            <TextBox x:Name="ProjectName" Text="Project Name" Width="120" Margin="15,9,5,5"   />
                            <Button x:Name="FindSprint" Content="Find" Width="120" Margin="10,9,10,5" Click="FindSprint_Click"   />
                        </WrapPanel>
                    </GroupBox>
                    <!--Sprint info-->
                    <GroupBox Header="Sprint info" BorderThickness="2" BorderBrush="Black"  Margin="10,50,340,230" Grid.ColumnSpan="2" VerticalAlignment="Top">
                        <StackPanel>
                            <TextBox x:Name="UserStory" Text="User Story" Margin="5"  />
                            <TextBox x:Name="Priority" Text="Priority" Margin="5"  />
                            <TextBox x:Name="IrE" Text="Initial Relative Estimate" Margin="5" />
                            <TextBox x:Name="IrC" Text="Initial Relative Cost" Margin="5" />
                            <Button Name="AddSprintInfo" Content="Add" Margin="10" Click="AddSprintInfo_Click" />
                        </StackPanel>
                    </GroupBox>
                    <!---Subtasks-->
                    <GroupBox Header="Subtasks" BorderThickness="2" BorderBrush="Black" Margin="10,230,340,40" Grid.ColumnSpan="2">
                        <StackPanel>
                            <ComboBox Name="UserStoryList2" Margin="5" />
                            <TextBox x:Name="Description" Text="Description" Margin="5"  />
                            <TextBox x:Name="InitialEstimate" Text="Initial Estimate" Margin="5"  />
                            <TextBox x:Name="HoursRemaining" Text="Hours Remaining" Margin="5" />
                            <Button Name="AddSubTaskToUserStory" Content="Add" Margin="10" Click="AddSubTaskToUserStory_Click" />
                        </StackPanel>
                    </GroupBox>
                    <!--Display-->
                    <GroupBox Header="Display" BorderThickness="2" BorderBrush="Black" Margin="142,50,10,40" Grid.Column="1">
                        <WrapPanel Grid.Row="1" Grid.ColumnSpan="2">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock x:Name="display2" Text="Result info goes here..." TextWrapping="Wrap" Width="398" Height="700" Margin="3" />
                            </ScrollViewer>
                        </WrapPanel>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Backlog" Height="20" VerticalAlignment="Top">
                <Grid>
                    <!--Header-->
                    <GroupBox BorderThickness="2" BorderBrush="Black" Margin="10,10,10,0" Height="39" VerticalAlignment="Top" >
                        <WrapPanel Grid.Row="1" Grid.ColumnSpan="2" >
                            <Label Content="Sprint Compass" FontSize="20" FontFamily="Century Gothic" FontWeight="SemiBold" FontStyle="Italic"/>
                            <Label Content=" - Backlog" FontSize="20" FontFamily="Century Gothic"/>
                            <TextBox x:Name="ProjectName2" Text="Project Name" Width="120" Margin="15,9,5,5"   />
                            <Button x:Name="FindSprint2" Content="Find" Width="120" Margin="10,9,10,5" Click="FindSprint2_Click"   />
                        </WrapPanel>
                    </GroupBox>
                    <!--Backlog-->
                    <GroupBox Header="Backlog" BorderThickness="2" BorderBrush="Black"  Margin="10,50,340,310" Grid.ColumnSpan="3">
                        <StackPanel>
                            <Label Content="Sprint"></Label>
                            <WrapPanel>
                                <ComboBox Name="SprintBox" Margin="5" Width="100"/>
                                <Button x:Name="AddSprint" Content="New Sprint" Margin="5" Width="90" Click="AddSprint_Click"/>
                            </WrapPanel>
                            <Label Content="User Story"></Label>
                            <WrapPanel>
                                <ComboBox Name="UserStoryList" Margin="5" Width="100" />
                                <Button Name="AddUserStoryToSprint" Content="Story To Sprint" Margin="5" Width="90" Click="AddUserStoryToSprint_Click" />
                            </WrapPanel>
                            
                            
                            <!--SelectionChanged="UserStoryList_SelectionChanged"-->
                            
                            <!--<Label Content="Sub Tasks"></Label>
                            <ComboBox Name="SubTasksList" Margin="5" />
                            <Button Name="AddSubTaskToUserStory" Content="Add To User Story" Margin="10" Click="AddSubTaskToUserStory_Click" />-->
                        </StackPanel>
                    </GroupBox>
                    <!--Log-->
                    <GroupBox Header="Log" BorderThickness="2" BorderBrush="Black" Margin="10,230,340,40" Grid.Column="2">
                        <StackPanel>
                            <Label Content="Sub Task"></Label>
                            <WrapPanel>
                                <ComboBox Name="SubTasks" Margin="5" Width="100"/>
                                <Button Name="LoadSubtasks" Content="Load Sub Tasks" Margin="5" Width="90" Click="LoadSubtasks_Click" />
                            </WrapPanel>
                            
                            <Label Content="Team Member"></Label>
                            <ComboBox Name="TeamMemberList" Margin="5"/>
                            <TextBox x:Name="HoursWorked" Text="Hours Worked" Margin="5"  />
                            <TextBox x:Name="Reestimate" Text="Re Estimate" Margin="5" />
                            <Button Name="LogSprintHours" Content="Add To Sub Task" Margin="10" Click="LogSprintHours_Click" />
                        </StackPanel>
                    </GroupBox>
                    <!--Display-->
                    <GroupBox Header="Display" BorderThickness="2" BorderBrush="Black" Margin="260,50,10,40" Grid.ColumnSpan="3">
                        <WrapPanel Grid.Row="1" Grid.ColumnSpan="2">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock x:Name="display3" Text="Result info goes here..." TextWrapping="Wrap" Width="398" Height="700" Margin="3" />
                            </ScrollViewer>
                        </WrapPanel>
                    </GroupBox>
                </Grid>

            </TabItem>
            <TabItem Header="Report">
                <Grid>
                    <!--Header-->
                    <GroupBox BorderThickness="2" BorderBrush="Black" Margin="10,10,10,0" Height="39" VerticalAlignment="Top" >
                        <WrapPanel Grid.Row="1" Grid.ColumnSpan="2" >
                            <Label Content="Sprint Compass" FontSize="20" FontFamily="Century Gothic" FontWeight="SemiBold" FontStyle="Italic"/>
                            <Label Content=" - Reports" FontSize="20" FontFamily="Century Gothic"/>
                        </WrapPanel>
                    </GroupBox>
                    <GroupBox Header="Backlog" BorderThickness="2" BorderBrush="Black"  Margin="10,50,340,40" Grid.ColumnSpan="3">
                        <WrapPanel>
                            <Button x:Name="SaveToPdf" Content="Save to Pdf" Margin="5" Width="75" Height="50" Click="SaveToPdf_Click"/>
                            <Button x:Name="Report" Content="Report" Margin="5" Width="75" Height="50" Click="Report_Click"/>
                        </WrapPanel>
                        
                    </GroupBox>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
